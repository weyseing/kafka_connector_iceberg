{
  "name": "iceberg-sink-connector",
  "config": {
    "connector.class": "io.tabular.iceberg.connect.IcebergSinkConnector",
    "tasks.max": "1",

    "topics": "stream_order_intake",

    "iceberg.table.default.catalog-name": "glue_catalog",
    "iceberg.table.default.database": "kafka_data_lake",
    "iceberg.table.default.name": "orders",
    "iceberg.table.auto-create": "true",
    "iceberg.table.create.partition-by": "day(order_timestamp)",
    "iceberg.table.write.format": "parquet",
    "iceberg.table.commit.interval-ms": "60000",
    "iceberg.table.commit.size": "10000",
    
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false"
  }
}